{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "slither_output.schema.json",
  "title": "DS Slither Output",
  "description": "Wrapper schema for Slither static analysis output on DS samples.",
  "type": "object",
  "required": ["sample_id", "tier", "tool", "tool_version", "timestamp", "success", "raw_output"],
  "properties": {
    "sample_id": {
      "type": "string",
      "pattern": "^ds_t[1-4]_\\d{3}$",
      "description": "Sample identifier (e.g., ds_t1_001)."
    },
    "tier": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Difficulty tier (1-4)."
    },
    "tool": {
      "type": "string",
      "const": "slither",
      "description": "Tool name."
    },
    "tool_version": {
      "type": "string",
      "description": "Slither version (e.g., 0.11.3)."
    },
    "solc_version": {
      "type": "string",
      "description": "Solidity compiler version used (e.g., 0.8.0)."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of execution."
    },
    "success": {
      "type": "boolean",
      "description": "Whether Slither executed successfully."
    },
    "error": {
      "type": ["string", "null"],
      "description": "Error message if execution failed, null otherwise."
    },
    "execution_time_ms": {
      "type": "number",
      "minimum": 0,
      "description": "Execution time in milliseconds."
    },
    "exit_code": {
      "type": "integer",
      "description": "Process exit code."
    },
    "raw_output": {
      "type": "object",
      "description": "Raw Slither JSON output as-is. Structure defined by Slither.",
      "properties": {
        "success": { "type": "boolean" },
        "error": { "type": ["string", "null"] },
        "results": {
          "type": "object",
          "properties": {
            "detectors": {
              "type": "array",
              "description": "Array of detector findings."
            },
            "printers": { "type": "array" }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
